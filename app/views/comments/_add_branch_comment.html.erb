<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalAddBranchComment">Add Comment</button>

<!-- Modal -->
<div id="myModalAddBranchComment" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content text-left">

      <div class="modal-header">
        <h4 class="modal-title">Add Comment</h4>
      </div>

      <%= form_for(@branch_comment, url: comments_path(@branch_comment), html: {multipart: :true, class: "form"}) do |f| %>
        <div class="modal-body">

          <div class="form-group col-lg-12 text-center">
            <%= hidden_field_tag 'branch_id', @branch_comment.commentable.id %>
            <%= f.text_area :body, class: 'form-control', required: true %>
          </div>

          <div class="form-group col-lg-12 text-center">
            <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
          </div>

        </div>
      <% end %>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

