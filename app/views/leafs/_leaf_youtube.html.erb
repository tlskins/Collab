  <div class="container">
    <div id="player-wrapper"></div>
      <div class="text-center row vertical-center-row">
        <h1>Current Leaf</h1>
          <% if @source %>
            <div class="text-center col-md-4 col-md-offset-4">
              <div class="yt_video thumbnail">
                <%= link_to image_tag("https://img.youtube.com/vi/#{@source.uid}/mqdefault.jpg", alt: @source.title,
                                      class: 'img-rounded'),
                            "https://www.youtube.com/watch?v=#{@source.uid}", target: '_blank' %>
                <div class="caption">
                  <h5><%= @source.title %></h5>
                  <p><b>Published at:</b> <%= @source.published_at %></p>
                  <p>
                    <span class="glyphicon glyphicon glyphicon-thumbs-up"></span> <%= @source.likes %>
                    <span class="glyphicon glyphicon glyphicon-thumbs-down"></span> <%= @source.dislikes %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
      </div>
  </div>
