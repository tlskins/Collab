<div class="container">
  <h1>New Leaf</h1>

  <%= form_for(@leaf, url: {action: "create"}) do |l| %>
    <%= render 'shared/errors', object: @leaf %>

    <div class="form-group">
      <%= l.label :link %>
      <%= l.text_field :link, class: 'form-control', required: true %>
      <span class="help-block">A link to the video on YouTube.</span>
    </div>

    <%= l.submit class: 'btn btn-primary' %>
  <% end %>
</div>


