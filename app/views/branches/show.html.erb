    <section class="jumbotron">
      <div class="container">
        <h1 class="display-3 text-center"><b>Branch</b><br /><%= @branch.name %></h1><br /><br />
        <% if @branch.path %>
	  <div class="row">
	  <div class="col-sm-6 col-sm-offset-3">
	  <div class="card card-outline-primary mb-3 text-center">
	    <div class="card-block">
	      <p class="lead"><b>Path: </b><%= @branch.path %></p>
            </div>
	  </div>
	  </div>
	  </div>
        <% end %>
        <p class="lead"><%= @branch.purpose_html %></p>
        <p class="lead text-muted"><b>Created at: </b><%= @branch.created_at.strftime('%-d %B %Y') %></p>
    
        <% if @is_current_admin_collaborator %>
        <hr class="my-4">
        <div class="container-block text-center">
          <p>
            <% if current_admin and @branch.creator.admin.id == current_admin.id %>
              <%= link_to "Delete Branch", collab_project_branch_path(:collab_project_id => @branch.collabproject.id, :id => @branch.id), 
		method: :delete, data: { confirm: "You sure?" }, class: "btn btn-primary" %>
            <% end %>
            <%= render('branches/edit_branch') %>
            <a href=<%= collab_project_branch_new_child_branch_path(@branch.collabproject, @branch) %> class="btn btn-primary">Add Branch</a>
            <%= render('branches/add_leaf') %>
          </p>
        </div>
        <% end %>

      </div>
    </section>

<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <% if @all_leaves %>
      <%= render 'leafs/display_leafs' %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="col-md-6">
    <div class="row">
      <div class="col-lg-12">
        <h1 class='page-header'><%= @branch.name %>
          <small>child branches</small>
        </h1>
      </div>
    </div>
    <% if @child_branches.any? %>
      <div class="panel-group" id="accordion">
        <% @child_branches.each do |branch| %>
          <%= render branch %>
        <% end %>
        <br /><br />
      </div>
    <% else %>
      <h3>No Child Branches<br /><br /></h3>
    <% end %>
  </div>

  <div class="col-md-6">
    <%= render 'branches/add_display_comments' %>
  </div>
</div>

<%= render 'branches/branch_footer_nav' %>
